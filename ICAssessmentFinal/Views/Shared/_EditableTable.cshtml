@model ICAssessmentFinal.Common.EditableTableOption

@if (Model.CanAdd)
{
    <button type="button" class="btn btn-primary" data-bind="click: addRecord">Add New Record</button>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            @foreach (var columnInfo in Model.Columnelemnts)
            {
                <th>
                    @columnInfo.Item1
                </th>
            }
        </tr>
    </thead>
    <tbody data-bind="foreach: records">
        <tr>
            <td><span data-bind="text: Id"></span></td>
            @foreach (var columnInfo in Model.Columnelemnts)
            {
                <td>@Html.Raw(columnInfo.Item2)</td>
            }
            @if (Model.CanRemove)
            {
                <td><a href="#" data-bind="click: $root.remove">Remove</a></td>
            }
        </tr>
    </tbody>
</table>

<button type="button" class="btn btn-primary" data-bind="click: save">Save All</button>